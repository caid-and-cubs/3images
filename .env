# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True

# Hugging Face API Key (Required)
# Get your free API key from https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_your_huggingface_api_key_here

# Database Configuration (Optional)
# Leave empty to use SQLite, or provide PostgreSQL URL for production
# DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# For Docker deployment, you can use:
# DATABASE_URL=postgresql://postgres:postgres@db:5432/image_generator
